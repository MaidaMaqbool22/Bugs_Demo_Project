<%= form_for(@bugs) do |form| %>
  <div>
    <b><%= form.label :title, style: "display: block" %></b>
    <%= form.text_field :title %>
  </div>

  <br>

  <div>
    <b><%= form.label :bug_type %>:</b>
    <%= form.select(:bug_type, Bug::BUGS_TYPE) %>
  </div>

  <br>

  <div>
    <b><%= form.label :project_id %>:</b>
    <%= form.select(:project_id , (@projects.pluck :title, :id)) %>
  </div>

  <br>

  <div>
    <%= form.fields_for :discriptions do |discription_form| %>
    <b> <%= discription_form.label :detail %>: </b>
      <%= discription_form.text_field :detail %>
    <% end %>
  </div>

  <br>
  <div>
    <%= form.submit %>
  </div>
<% end %>