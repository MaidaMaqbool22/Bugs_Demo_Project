<%= form_for(@bugs) do |form| %>
  
  <div>
    <b><%= form.label :title, style: "display: block" %></b>
    <%= form.text_field :title %>
  </div>

  <br>

  <div>
    <b><%= form.label :stages %>:</b>
    <%= form.select(:stages, Bug::STAGES_LIST) %>
  </div>

  <br>

  <div>
    <b><%= form.label :bug_type %>:</b>
    <%= form.select(:bug_type, Bug::BUGS_TYPE) %>
  </div>

  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
